  </div>  <script>
    function revealLetter() {
      const letter = document.getElementById('letter');
      letter.classList.add('show');
      setTimeout(() => {
        letter.scrollTo({ top: 0, behavior: 'smooth' });
      }, 200);
    }
  </script></body>
